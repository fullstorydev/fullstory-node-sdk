{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./lib",
        "rootDir": "./src",
        "target": "es6",
        "strict": true,
        "declaration": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "paths": {
            "@model/*": [ "./src/model/*" ],
            "@api/*": [ "./src/api/*" ],
        }
    },
    "include": [ "./src/**/*" ],
    "exclude": [
        "lib",
        "node_modules"
    ],

}
